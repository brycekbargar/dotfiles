[include]
    path = ./delta.catppuccin.frappe.gitconfig
    path = ./delta.catppuccin.gitconfig

[core]
    pager = delta

[delta]
    features = catppuccin
    syntax-theme = catppuccin-frappe
    navigate = true
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false
[diff]
    colorMoved = default

[merge]
    toolssss = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false

[alias]
    # Todos las Cosas!
    todos = !git status && echo && git loog
    fuck = !git add -A && git commit --amend --no-edit
    sorry = !git add -A && git rebase --continue
	# I can never type this correctly
    checokut = checkout
