[include]
    path = ../delta/config
[core]
    pager = delta
    hooksPath = ~/.local/etc/git/hooks
[diff]
    colorMoved = blocks
[color "diff"]
    oldMoved = dim red
    newMoved = dim green

[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false

[alias]
    # Todos las Cosas!
    todos = !git status && git loog
    fuck = !git add -A && git commit --amend --no-edit
    sorry = !git add -A && git rebase --continue
    loog = "!f() { git log --graph --abbrev-commit --date=relative --pretty=longref -n ${1:-15}; }; f"
	# I can never type this correctly
    checokut = checkout

[pretty]
    longref="%C(magenta)%h %C(green)(%ar) %C(yellow)%an %C(blue)%d %C(white bold)%s %C(reset)"

