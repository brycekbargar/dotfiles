[include]
    path = ../delta/gitconfig
[core]
    pager = delta --paging=always
[diff]
    colorMoved = blocks
[color "diff"]
    oldMoved = dim red
    newMoved = dim green
[pager]
    status = true
    blame = true
    log = true
    diff = true

[merge]
    toolssss = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false

[alias]
    # Todos las Cosas!
    todos = !BAT_PAGER="" git status && git loog
    fuck = !git add -A && git commit --amend --no-edit
    sorry = !git add -A && git rebase --continue
	# I can never type this correctly
    checokut = checkout

[pretty]
    catppuccin-frappe="%C(#f4b8e4)%h %C(#a6d189)(%ar) %C(#e5c890)%an %C(#8caaee)%d %C(#c6d0f5)%s %C(reset)"

